<%= form_for [user, item], remote: true do |f| %>
<div class="bootstrap-iso">
 <div class="container-fluid">
  <div class="row">
   <div class="col-md-6 col-sm-6 col-xs-12">
    <form method="post">
      <div class="form-group" style="font-family: 'Josefin Sans', sans-serif;">
        <h3><%= f.label :task %></h3>
        <%= f.text_area :name, class: 'form-control', placeholder: "Enter item here" %>
        <h6 style="color:grey"><span class="help-block" id="hint_textarea">
         Create your daily to do list. If you don't complete an item within 7 days, we'll whack it for you (it shouldn't be on your daily to do list anyway)!
        </span></h6>
      </div>
      <div class="form-group">
        <%= f.submit "Add", class: 'btn btn-success' %>
      </div>
<% end %>
